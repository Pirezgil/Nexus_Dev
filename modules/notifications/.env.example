# ==============================================
# CONFIGURAÇÃO DO MÓDULO DE NOTIFICAÇÕES
# ==============================================

# Configuração do Servidor
NODE_ENV=development
PORT=5006
LOG_LEVEL=info

# Configuração do Banco de Dados
DATABASE_URL="postgresql://nexus_user:nexus_password@localhost:5432/nexus_erp?schema=public"

# Configuração do Redis (para filas)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Configuração de Autenticação Inter-Serviços
JWT_SECRET=your-super-secure-jwt-secret-key-here
GATEWAY_HMAC_SECRET=your-super-secure-hmac-secret-for-inter-service-auth

# ==============================================
# CANAIS DE NOTIFICAÇÃO
# ==============================================

# Configuração de Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM_NAME="ERP Nexus"
EMAIL_FROM_ADDRESS=noreply@erpnexus.com

# Configuração Twilio (SMS e WhatsApp)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Configuração Push Notifications (Firebase)
FCM_SERVER_KEY=your-firebase-server-key
FCM_PROJECT_ID=your-firebase-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/firebase-service-account.json

# Configuração Push Notifications (Apple)
APNS_CERT_PATH=path/to/apns-cert.pem
APNS_KEY_PATH=path/to/apns-key.pem
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apple-team-id
APNS_BUNDLE_ID=com.yourcompany.erpnexus

# Configuração Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_DEFAULT_CHANNEL=#notifications

# ==============================================
# CONFIGURAÇÕES AVANÇADAS
# ==============================================

# Configuração de WebSocket
WEBSOCKET_PORT=5007
WEBSOCKET_CORS_ORIGIN=http://localhost:3000,http://localhost:3002

# Configuração de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_EMAIL_PER_HOUR=100
RATE_LIMIT_SMS_PER_DAY=20

# Configuração de Retry
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=5000
EXPONENTIAL_BACKOFF=true

# Configuração de Limpeza
CLEANUP_ENABLED=true
CLEANUP_DAYS_OLD=30
CLEANUP_SCHEDULE=0 2 * * *

# Configuração de Filas
QUEUE_CONCURRENCY=10
QUEUE_MAX_ATTEMPTS=3
QUEUE_BACKOFF_TYPE=exponential
QUEUE_BACKOFF_SETTINGS_DELAY=5000

# Configuração de Templates
TEMPLATE_ENGINE=mustache
TEMPLATE_CACHE_ENABLED=true
TEMPLATE_CACHE_TTL=300

# Configuração de Monitoramento
METRICS_ENABLED=true
METRICS_PORT=5008
HEALTH_CHECK_INTERVAL=30000

# Configuração de Logs
LOG_FORMAT=combined
LOG_FILE_PATH=logs/notifications.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ==============================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ==============================================

# Debug
DEBUG=notifications:*
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Mock Services (para desenvolvimento)
MOCK_EMAIL_SERVICE=false
MOCK_SMS_SERVICE=false
MOCK_PUSH_SERVICE=false

# Configurações de Teste
TEST_EMAIL_RECIPIENT=test@example.com
TEST_SMS_RECIPIENT=+1234567890