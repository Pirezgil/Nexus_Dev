# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
# PostgreSQL connection string for the CRM module
DATABASE_URL="postgresql://nexus_user:nexus_password@localhost:5432/nexus_erp"

# Redis Configuration
# Redis connection string for caching and session management
REDIS_URL="redis://localhost:6379"

# User Management Service Integration
# URL of the User Management service for authentication validation
USER_MANAGEMENT_URL="http://localhost:5003"

# JWT Configuration (should match User Management module)
# Secret key for JWT token validation (keep this secure!)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS="http://localhost:3000,http://localhost:5000,http://localhost:5001"

# Logging Configuration
# Logging level: error, warn, info, debug
LOG_LEVEL="info"

# Rate Limiting Configuration
# Rate limiting window in milliseconds (15 minutes = 900000ms)
RATE_LIMIT_WINDOW_MS=900000
# Maximum number of requests per window
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
# bcrypt salt rounds for password hashing (if needed)
BCRYPT_SALT_ROUNDS=12

# Application-specific Configuration
# Maximum file upload size
MAX_FILE_SIZE="10mb"

# Cache Configuration
# Default cache TTL in seconds
DEFAULT_CACHE_TTL=300

# Email Configuration (for future use)
# SMTP settings for email notifications
# SMTP_HOST=""
# SMTP_PORT=""
# SMTP_USER=""
# SMTP_PASS=""
# SMTP_FROM=""

# WhatsApp Integration (for future use)
# WhatsApp API configuration for customer communication
# WHATSAPP_API_KEY=""
# WHATSAPP_API_URL=""

# AWS Configuration (for future use)
# AWS credentials for file storage (S3, etc.)
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""
# AWS_REGION=""
# AWS_S3_BUCKET=""

# Monitoring Configuration (for future use)
# Sentry DSN for error tracking
# SENTRY_DSN=""

# Analytics Configuration (for future use)
# Google Analytics or similar
# ANALYTICS_ID=""

# Feature Flags
# Enable/disable specific features
ENABLE_ADVANCED_SEARCH=true
ENABLE_EXPORT_FEATURES=true
ENABLE_BULK_OPERATIONS=true

# Development Configuration
# Development-specific settings
# Enable request/response logging in development
ENABLE_REQUEST_LOGGING=true
# Enable SQL query logging in development
ENABLE_QUERY_LOGGING=false

# Database Connection Pool Configuration
# Maximum number of database connections
DATABASE_POOL_SIZE=10
# Database connection timeout
DATABASE_TIMEOUT=30000

# Performance Configuration
# Enable response compression
ENABLE_COMPRESSION=true
# Enable response caching
ENABLE_RESPONSE_CACHING=true

# Backup Configuration (for future use)
# Automated backup settings
# BACKUP_ENABLED=false
# BACKUP_SCHEDULE="0 2 * * *"
# BACKUP_RETENTION_DAYS=30

# Localization Configuration (for future use)
# Default language and timezone
DEFAULT_LANGUAGE="pt-BR"
DEFAULT_TIMEZONE="America/Sao_Paulo"

# API Documentation Configuration (for future use)
# Swagger/OpenAPI settings
# ENABLE_API_DOCS=true
# API_DOCS_PATH="/docs"