# ERP Nexus Frontend - Development Mode  
FROM node:18-alpine

WORKDIR /app

# Install curl for health checks
RUN apk add --no-cache curl

# Copy all files including node_modules for development speed
COPY . .

# Install dependencies if node_modules is missing or update them
RUN npm install --no-audit --no-fund

# Expose port
EXPOSE 3000

# Simple health check  
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
  CMD curl -f http://localhost:3000 || exit 1

# Start in development mode
CMD ["npm", "run", "dev"]