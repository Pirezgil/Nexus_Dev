# Nexus ERP - Environment Variables Template
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=postgresql://nexus_user:nexus_password@localhost:5433/nexus_erp
POSTGRES_DB=nexus_erp
POSTGRES_USER=nexus_user
POSTGRES_PASSWORD=nexus_password

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Application Configuration
NODE_ENV=development
PORT=5000

# API URLs for inter-module communication
USER_MANAGEMENT_URL=http://localhost:5003
CRM_URL=http://localhost:5004
SERVICES_URL=http://localhost:5005
AGENDAMENTO_URL=http://localhost:5007
GATEWAY_URL=http://localhost:5001

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:5001
NEXT_PUBLIC_USER_MANAGEMENT_URL=http://localhost:5003
NEXT_PUBLIC_CRM_URL=http://localhost:5004
NEXT_PUBLIC_SERVICES_URL=http://localhost:5005
NEXT_PUBLIC_AGENDAMENTO_URL=http://localhost:5007

# External Services
WHATSAPP_API_KEY=your-whatsapp-api-key-here
WHATSAPP_API_URL=https://api.whatsapp.com/send

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Email Configuration (for password recovery)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-app-password

# Development Configuration
DEBUG=true
LOG_LEVEL=debug
CORS_ORIGIN=http://localhost:3000,http://localhost:5000

# Production Configuration (comment out for development)
# NODE_ENV=production
# DEBUG=false
# LOG_LEVEL=info
# CORS_ORIGIN=https://your-domain.com